# ==============
# Tmux Configuration
# ==============

# ------------------
# General Settings
# ------------------
# Enable mouse support
set -g mouse on

# Increase scrollback buffer size
set -g history-limit 50000

# Set default terminal to 256 colors
set -g default-terminal "screen-256color"
set -ga terminal-overrides ",*256col*:Tc"

# Enable true color support
set -as terminal-overrides ',xterm*:Tc:sitm=\E[3m'

# Start window and pane numbering at 1
set -g base-index 1
setw -g pane-base-index 1

# Renumber windows when one is closed
set -g renumber-windows on

# Increase display time for messages
set -g display-time 2000

# Increase repeat time for repeatable commands
set -g repeat-time 600

# Enable focus events (for vim compatibility)
set -g focus-events on

# Aggressive resize (useful when multiple clients are attached)
setw -g aggressive-resize on

# Don't wait for escape sequences
set -sg escape-time 0

# ------------------
# Key Bindings
# ------------------
# Key Activator (Ctrl-a)
unbind C-b
set -g prefix C-a
bind C-a send-prefix # bind=Ctrl-a

# Reload config & display errors (if any)
bind r run-shell 'tmux source-file ~/.tmux.conf 2>/tmp/tmux_reload_errors && tmux display-message "tmux.conf reloaded!" || tmux display-message "Error reloading tmux.conf: $(cat /tmp/tmux_reload_errors)"'

# Create new window / split panes
bind c new-window -c "#{pane_current_path}"
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"
unbind '"'
unbind %

# Rename window
bind / command-prompt -I "#W" "rename-window '%%'"

# Kill window/pane
bind X confirm-before -p "kill-window #W? (y/n)" kill-window
bind x confirm-before -p "kill-pane #P? (y/n)" kill-pane

# Window navigation
bind n next-window
bind p previous-window

# Swap windows
bind -r "<" swap-window -d -t -1   # Ctrl-a < → swap with previous window
bind -r ">" swap-window -d -t +1   # Ctrl-a > → swap with next window

# Pane navigation (vim keys)
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# Resize panes with Ctrl + h/j/k/l
bind -r C-h resize-pane -L 5
bind -r C-j resize-pane -D 5
bind -r C-k resize-pane -U 5
bind -r C-l resize-pane -R 5

# Swap panes numerically Shift + H/J/K/L
bind -r J swap-pane -D 
bind -r K swap-pane -U

# Zoom pane (full screen)
bind m resize-pane -Z

# Enter copy mode
bind [ copy-mode
bind ] paste-buffer

# use vi keys in copy mode
setw -g mode-keys vi
set -g status-keys vi

# Vi-style copy/paste
bind -T copy-mode-vi v send -X begin-selection
bind -T copy-mode-vi y send -X copy-selection-and-cancel
bind -T copy-mode-vi C-v send -X rectangle-toggle

# Toggle synchronize panes
bind S set-window-option synchronize-panes\; display-message "synchronize-panes is now #{?pane_synchronized,on,off}"

# ------------------
# TMUX STATUS BAR CONFIGURATION
# ------------------
#
# Color Palette
# Background:    #0B0E14  (Dark background)
# Inactive text: #394150  (Muted gray)
# Active text:   #B1AEAA  (Light beige/gray)
# Accent color:  #5AAAD2  (Blue - rgb(90,170,210))
# Session text:  #D4D7DD  (Light gray)
# Separator:     #394150  (Muted gray - same as inactive text)
#
# Note: tmux doesn't support native variables. To change, search and replace the hex values throughout this config file

# Status Bar General Settings
# ----------------------------
set -g status-interval 5
set -g status-position top
set -g status-style "bg=#0B0E14,fg=#394150"
# Center the window list for balanced appearance
set -g status-justify centre


# Left Status Section
# --------------------
# Displays: Session name
set -g status-left-length 10
set -g status-left "#[fg=#D4D7DD,bg=#0B0E14] #S "


# Right Status Section
# --------------------
# Displays: Keyboard indicator (when prefix is active) + Time
# - Uses absolute positioning to prevent layout shift
# - Keyboard icon (⌨) overlays the time when prefix is pressed
# - Both keyboard icon and time use fixed width to maintain spacing
set -g status-right-length 20
set -g status-right "#{?client_prefix,#[fg=#5AAAD2]⌨ #[fg=#394150],#[fg=#394150]  }%H:%M "


# Window List - Inactive Windows
# -------------------------------
# Format: Plain window name in muted color
setw -g window-status-format "#[fg=#394150,bg=#0B0E14] #W "


# Window List - Active Window
# ----------------------------
# Format: Icon (» or 󰊓 if zoomed) + Window name
# - Icon appears in accent color (#5AAAD2)
# - » = Normal window (widely supported)
# - 󰊓 = Zoomed/maximized pane
# - Window name appears in active text color
setw -g window-status-current-format \
"#[fg=#5AAAD2,bg=#0B0E14]#{?window_zoomed_flag,󰊓,»} #[fg=#B1AEAA,bg=#0B0E14]#W "


# Window Separator
# ----------------
# Dot symbol (•) separates all windows in the list
setw -g window-status-separator "#[fg=#394150,bg=#0B0E14] • "


# ------------------
# Pane Borders
# ------------------
set -g pane-border-style "fg=#5b595c"
set -g pane-active-border-style "fg=#5AAAD2"

# Pane number display
set -g display-panes-active-colour "#5AAAD2"
set -g display-panes-colour "#ab9df2"

# ------------------
# Messages & Alerts
# ------------------
# Message style (for notifications like "tmux.conf reloaded!")
# - Blue background with white text for consistency with accent color
set -g message-style "fg=#fcfcfa,bg=#5AAAD2"

# Command prompt style (for confirmations like kill-window/kill-pane)
# - Same style as messages for visual consistency
set -g message-command-style "fg=#fcfcfa,bg=#5AAAD2"

# ------------------
# Clock Mode
# ------------------
setw -g clock-mode-colour "#78dce8"
setw -g clock-mode-style 24

# ------------------
# Activity Monitoring
# ------------------
# Monitor for activity in windows
setw -g monitor-activity on
set -g visual-activity off

# Bell
set -g visual-bell off
set -g bell-action none

# ------------------
# Copy Mode
# ------------------
# Highlight current line in copy mode
setw -g mode-style "fg=#fcfcfa,bg=#5b595c"

# ------------------
# Session Management
# ------------------
# Choose session
bind s choose-session

# Create new session
bind C command-prompt -p "New session:" "new-session -s '%%'"

# Kill session
bind Q confirm-before -p "kill-session #S? (y/n)" kill-session
