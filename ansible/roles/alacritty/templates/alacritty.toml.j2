# ==============================================================================
# Alacritty Configuration
# ==============================================================================
# GPU-accelerated terminal emulator configuration
# Documentation: https://alacritty.org/config-alacritty.html
# ==============================================================================

# ------------------------------------------------------------------------------
# Environment Variables
# ------------------------------------------------------------------------------
[env]
TERM = "xterm-256color"

# ------------------------------------------------------------------------------
# Shell Configuration
# ------------------------------------------------------------------------------
[shell]
program = "/opt/homebrew/bin/zsh"
args = ["-l"]

# ------------------------------------------------------------------------------
# Window Configuration
# ------------------------------------------------------------------------------
[window]
# Window dimensions (in columns and lines)
dimensions = { columns = 120, lines = 40 }

# Window padding
padding = { x = 4, y = 4 }

# Spread additional padding evenly around the terminal content
dynamic_padding = true

# Window decorations: "full" | "none" | "transparent" | "buttonless"
decorations = "buttonless"

# Background opacity (0.0 - 1.0)
opacity = 0.93

# Startup mode: "Windowed" | "Maximized" | "Fullscreen"
startup_mode = "Windowed"

# Window title
title = "Alacritty"

# Allow terminal applications to change Alacritty's window title
dynamic_title = true

# Window class (Linux/BSD only)
# [window.class]
# instance = "Alacritty"
# general = "Alacritty"

# ------------------------------------------------------------------------------
# Scrolling
# ------------------------------------------------------------------------------
[scrolling]
# Maximum number of lines in scrollback buffer
history = 50000

# Number of lines scrolled per scroll action
multiplier = 3

# ------------------------------------------------------------------------------
# Font Configuration
# ------------------------------------------------------------------------------
[font]
# Normal (roman) font face
normal = { family = "FiraCode Nerd Font", style = "Regular" }

# Bold font face
bold = { family = "FiraCode Nerd Font", style = "Bold" }

# Italic font face
italic = { family = "FiraCode Nerd Font", style = "Italic" }

# Bold italic font face
bold_italic = { family = "FiraCode Nerd Font", style = "Bold Italic" }

# Point size
size = 14.0

# Offset adjusts the vertical position of glyphs
offset = { x = 0, y = 0 }

# Glyph offset determines the locations of the glyphs within their cells
glyph_offset = { x = 0, y = 0 }

# Use thin stroke font rendering on macOS (true makes fonts thinner)
builtin_box_drawing = true

# ------------------------------------------------------------------------------
# Colors (Black background with Monokai Pro colors)
# ------------------------------------------------------------------------------
[colors.primary]
background = "#000000"
foreground = "#fcfcfa"

# Bright and dim foreground colors (optional)
dim_foreground = "#a19ea1"
bright_foreground = "#fcfcfa"

[colors.cursor]
text = "#2d2a2e"
cursor = "#fcfcfa"

[colors.vi_mode_cursor]
text = "#2d2a2e"
cursor = "#ffd866"

[colors.search.matches]
foreground = "#2d2a2e"
background = "#ab9df2"

[colors.search.focused_match]
foreground = "#2d2a2e"
background = "#a9dc76"

[colors.hints.start]
foreground = "#2d2a2e"
background = "#ffd866"

[colors.hints.end]
foreground = "#2d2a2e"
background = "#ab9df2"

[colors.line_indicator]
foreground = "None"
background = "None"

[colors.footer_bar]
foreground = "#2d2a2e"
background = "#a19ea1"

[colors.selection]
text = "CellForeground"
background = "#5b595c"

[colors.normal]
black = "#2d2a2e"
red = "#ff6188"
green = "#a9dc76"
yellow = "#ffd866"
blue = "#fc9867"
magenta = "#ab9df2"
cyan = "#78dce8"
white = "#fcfcfa"

[colors.bright]
black = "#5b595c"
red = "#ff6188"
green = "#a9dc76"
yellow = "#ffd866"
blue = "#fc9867"
magenta = "#ab9df2"
cyan = "#78dce8"
white = "#fcfcfa"

[colors.dim]
black = "#2d2a2e"
red = "#ff6188"
green = "#a9dc76"
yellow = "#ffd866"
blue = "#fc9867"
magenta = "#ab9df2"
cyan = "#78dce8"
white = "#fcfcfa"

# ------------------------------------------------------------------------------
# Bell
# ------------------------------------------------------------------------------
[bell]
# Visual bell animation: "Ease" | "EaseOut" | "EaseOutSine" | "EaseOutQuad"
animation = "EaseOutExpo"
duration = 100
color = "#ffd866"

# ------------------------------------------------------------------------------
# Selection
# ------------------------------------------------------------------------------
[selection]
# Save selection to clipboard on copy
save_to_clipboard = true

# ------------------------------------------------------------------------------
# Cursor
# ------------------------------------------------------------------------------
[cursor]
# Cursor style: "Block" | "Underline" | "Beam"
style = { shape = "Block", blinking = "On" }

# Vi mode cursor style (falls back to cursor style if not specified)
vi_mode_style = { shape = "Block", blinking = "Off" }

# Cursor blink interval (milliseconds)
blink_interval = 750

# If cursor should be unfocused when terminal loses focus
unfocused_hollow = true

# Thickness of the cursor relative to cell width (0.0 - 1.0)
thickness = 0.15

# ------------------------------------------------------------------------------
# Mouse
# ------------------------------------------------------------------------------
[mouse]
# Hide cursor when typing
hide_when_typing = true

# ------------------------------------------------------------------------------
# Hints (URL launcher)
# ------------------------------------------------------------------------------
[hints]
# Characters used for hint labels
alphabet = "jfkdls;ahgurieowpq"

# Enable hints
[[hints.enabled]]
regex = "(ipfs:|ipns:|magnet:|mailto:|gemini:|gopher:|https:|http:|news:|file:|git:|ssh:|ftp:)[^\u0000-\u001F\u007F-\u009F<>\"\\s{-}\\^⟨⟩`]+"
command = "open"
post_processing = true
mouse.enabled = true
binding = { key = "U", mods = "Control|Shift" }

# ------------------------------------------------------------------------------
# Keyboard Bindings
# ------------------------------------------------------------------------------
[keyboard]
# Key bindings
bindings = [
    # Copy/Paste
    { key = "V", mods = "Command", action = "Paste" },
    { key = "C", mods = "Command", action = "Copy" },
    { key = "C", mods = "Command|Shift", action = "ClearSelection" },

    # Search
    { key = "F", mods = "Command", mode = "~Search", action = "SearchForward" },
    { key = "B", mods = "Command", mode = "~Search", action = "SearchBackward" },

    # Window management
    { key = "N", mods = "Command", action = "CreateNewWindow" },
    { key = "W", mods = "Command", action = "Quit" },
    { key = "Q", mods = "Command", action = "Quit" },

    # Font size
    { key = "Plus", mods = "Command", action = "IncreaseFontSize" },
    { key = "Minus", mods = "Command", action = "DecreaseFontSize" },
    { key = "Key0", mods = "Command", action = "ResetFontSize" },

    # Vi mode
    { key = "Space", mods = "Shift|Control", mode = "~Search", action = "ToggleViMode" },

    # Scrolling
    { key = "K", mods = "Command", mode = "~Alt", action = "ScrollLineUp" },
    { key = "J", mods = "Command", mode = "~Alt", action = "ScrollLineDown" },
    { key = "Home", mods = "Shift", mode = "~Alt", action = "ScrollToTop" },
    { key = "End", mods = "Shift", mode = "~Alt", action = "ScrollToBottom" },
]

# ------------------------------------------------------------------------------
# Debug
# ------------------------------------------------------------------------------
[debug]
# Display the time it takes to draw each frame
render_timer = false

# Keep the log file after quitting
persistent_logging = false

# Log level: "Off" | "Error" | "Warn" | "Info" | "Debug" | "Trace"
log_level = "Warn"

# Print all received window events
print_events = false
