# Alacritty Configuration (TOML)

[window]
padding.x = 2
padding.y = 2
dynamic_title = true

[font]
normal.family = "Fira Code"
normal.style = "Regular"
size = 14.0

[colors.primary]
background = "0x1d1f21"
foreground = "0xc5c8c6"

[colors.cursor]
text = "0x1d1f21"
cursor = "0xc5c8c6"

[scrolling]
history = 10000
multiplier = 3
