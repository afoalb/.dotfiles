# --------
# Focus (alt)
# --------

## Move windows using Option + H/J/K/L
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

## Change focus between external displays
alt - n : yabai -m display --focus west
alt - m : yabai -m display --focus east


# --------
# Size (ctrl + alt)
# --------

# Resize windows using Ctrl + Option + H/J/K/L
ctrl + alt - h : yabai -m window --resize left:-20:0
ctrl + alt - j : yabai -m window --resize bottom:0:20
ctrl + alt - k : yabai -m window --resize top:0:-20
ctrl + alt - l : yabai -m window --resize right:20:0

# Restore balance out tree of windows
ctrl + alt - r : yabai -m space --balance


# --------
# Arrangement (shift + alt)
# --------

# Maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# Swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# Rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# Flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# Flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# Toggle window float (pop out)
shift + alt - p : yabai -m window --toggle float --grid 4:4:1:1:2:2


# Move window between workspaces (requires SIP disabled)
shift + alt - p : yabai -m window --space prev;
shift + alt - p : yabai -m window --space next;

# move window to space (requires SIP disabled)
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
